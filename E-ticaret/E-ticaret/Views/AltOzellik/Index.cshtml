@model List<OzellikDeger>
@{
    ViewBag.Title = "Alt Özellikler";
    Layout = "~/Views/Shared/_AdminPanelSablon.cshtml";
}
<style>
    table tr td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
@section Header{
    Alt Özellikler
    <a href="/AltOzellik/Ekle" class="btn btn-success">
        <i class="fa fa-plus" style="color:white;"> Yeni Alt Özellik </i>
    </a>
}
@if (TempData["mesaj"] != null)
{
    <div class="alert alert-success text-center col-lg-12">
        @TempData["mesaj"]
    </div>
}
<div class="card card-dark col-lg-12">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Alt Özellik Adı</th>
                    <th>Özellik Adı</th>
                    <th>Kategori Adı</th>
                    <th width="200px">İşlemler</th>
                </tr>
            </thead>
            @foreach (var ozellikDeger in Model)
            {
                <tr>
                    <td>
                        @ozellikDeger.ad
                    </td>
                    <td>
                        @ozellikDeger.OzellikTip.ad
                    </td>
                    <td>
                        @ozellikDeger.OzellikTip.Kategori.kategoriAd
                    </td>
                    @if (ozellikDeger.ozellikDegerID != 1)
                    {
                        <td>
                            <a href="/AltOzellik/Duzenle/@ozellikDeger.ozellikDegerID" class="btn btn-info btn-sm" title="Düzenle">
                                <i class="fa fa-edit"> Düzenle</i>
                            </a>
                            <a href="/AltOzellik/Sil/@ozellikDeger.ozellikDegerID" class="btn btn-danger btn-sm" title="Sil" onclick="return confirm('Silmek istediğinizden emin misiniz ?')">
                                <i class="fa fa-trash"> Sil</i>
                            </a>
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
</div>