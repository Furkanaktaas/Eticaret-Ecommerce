@model UrunGosterAnasayfa
@{
    ViewBag.Title = "Anasayfa";
}


<section class="col-lg-12" id="clients">
    <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
        <div id="carouselExampleControls" style="background:#c8c8c8;" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model.slider)
                {
                    if (item.resimID == 1)
                    {
                        <div class="carousel-item active">
                            <div class="row">
                                <div class="col-lg-12 clients-w3layouts-row">
                                    <div class="least-w3layouts-text-gap">
                                        <div class="row">
                                            <div class="col-md-4 news-img" style="text-align:center;">
                                                <img src="~/Content/Resimler/Slider/@item.resimAd" width="300" height="300" alt="" class="image-fluid">
                                            </div>
                                            <div class="col-lg-8" style="padding-top:10%;font-size:20px;text-align:center; font-weight:bold;line-height:3">
                                                @item.aciklama
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    break;
                }
                @foreach (var slider in Model.slider)
                {
                    if (slider.resimID != 1)
                    {
                        <div class="carousel-item">
                            <div class="row">
                                <div class="col-lg-12 clients-w3layouts-row">
                                    <div class="least-w3layouts-text-gap">
                                        <div class="row">
                                            <div class="col-md-4 news-img" style="text-align:center;">
                                                <img src="~/Content/Resimler/Slider/@slider.resimAd" width="300" height="300" alt="" class="image-fluid">
                                            </div>
                                            <div class="col-lg-8" style="padding-top:10%;font-size:20px;text-align:center; font-weight:bold;line-height:3">
                                                @slider.aciklama
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" style="background:black;" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only" style="color:black;">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" style="background:black;" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>

<section class="about py-lg-4 py-md-3 py-sm-3 py-3" id="about">
    <div class="container py-lg-5 py-md-5 py-sm-4 py-4">
        <h3 class="title text-center mb-lg-5 mb-md-4  mb-sm-4 mb-3">Son Eklenen Ürünler</h3>
        <div class="row banner-below-w3l">
            @foreach (var urun in Model.urunler)
            {
                foreach (var resim in Model.urunResimler)
                {
                    if (urun.urunID == resim.urunID)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6 text-center banner-agile-flowers">
                            <img src="~/Content/Resimler/Urunler/@resim.resimAd" width="250" height="250" alt="">
                            <h4 class="pt-3">@urun.urunAd</h4>
                        </div>
                        break;
                    }
                }
            }
        </div>
        <div class="col-lg-12" style="text-align:center;margin-top:40px;font-size:20px;">
            <a href="/Oyuncak/Index">
                <p style="background:#ca123f;color:white;"> HADİ DURMA TIKLA VE ALIŞVERİŞE BAŞLA</p>
            </a>
        </div>
    </div>
</section>



