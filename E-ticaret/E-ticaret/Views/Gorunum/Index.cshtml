@model List<Slider>
@{
    ViewBag.Title = "Görünüm";
    Layout = "~/Views/Shared/_AdminPanelSablon.cshtml";
}

@section Header{
    Görünüm
}

<div class="card card-dark col-lg-12" style="margin-top:-20px;">
    <div class="card-header">
    </div>
    <div class="card-body">
        @if (TempData["Hata"] != null )
        {
            <div class="alert alert-danger text-center" style="color:white;">
                @TempData["Hata"] 
            </div>
        }
        @if (TempData["Basari"] != null)
        {
            <div class="alert alert-success text-center" style="color:white;">
                @TempData["Basari"]
            </div>
        }
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th width="100">Sıralama</th>
                    <th width="200">Resim</th>
                    <th>Resim Açıklaması</th>
                    <th width="100">İşlemler</th>
                </tr>
            </thead>
            @foreach (var slider in Model)
            {
                <tr>
                    <td>
                        <b>   @slider.resimID .Resim</b>
                    </td>
                    <td>
                        <img src="~/Content/Resimler/Slider/@slider.resimAd" width="150" height="150" />
                    </td>
                    <td>
                        @slider.aciklama
                    </td>
                    <td>
                        <a href="/Gorunum/Duzenle/@slider.resimID" class="btn btn-info btn-sm" title="Düzenle">
                            <i class="fa fa-edit">  Düzenle</i>
                        </a>
                    </td>

                </tr>
            }
        </table>

    </div>
</div>
