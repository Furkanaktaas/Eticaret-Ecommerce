@model List<OzellikTip>
@{
    ViewBag.Title = "Özellikler";
    Layout = "~/Views/Shared/_AdminPanelSablon.cshtml";
}

@section Header{
    Özellikler
    <a href="/Ozellik/Ekle" class="btn btn-success" title="Özellik Ekle">
        <i class="fa fa-plus" style="color:white;"> Yeni Özellik </i>
    </a>
}
<style>
    table tr td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
@if (TempData["Basari"] != null)    
{
    <div class="alert alert-success text-center col-lg-12" style="color:white;">
          @TempData["Basari"]
    </div>
}
    <div class="card card-dark col-lg-12">
        <div class="card-header ">
      
        </div>
        <div class="card-body">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Özellik Adı</th>
                        <th>Kategori Adı</th>
                        <th width="200px">İşlemler</th>
                    </tr>
                </thead>
                @foreach (var ozellikTip in Model)
                {
                <tr>
                    <td>
                        @ozellikTip.ad
                    </td>
                    <td>
                        @ozellikTip.Kategori.kategoriAd
                    </td>
                    @if (ozellikTip.ozellikTipID != 1)
                    {
                        <td>
                            <a href="/Ozellik/Duzenle/@ozellikTip.ozellikTipID" class="btn btn-info btn-sm" title="Düzenle">
                                <i class="fa fa-edit">  Düzenle</i>
                            </a>
                            <a href="/Ozellik/Sil/@ozellikTip.ozellikTipID" class="btn btn-danger btn-sm" title="Sil" onclick="return confirm('Silmek istediğinizden emin misiniz ?')">
                                <i class="fa fa-trash"> Sil</i>
                            </a>
                        </td>
                    }
                    </tr>
                }
            </table>
        </div>
    </div>


