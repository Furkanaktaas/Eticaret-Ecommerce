@model OzellikTip
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminPanelSablon.cshtml";
}
<style>

    .field-validation-error {
        background-color: #e52a2a;
        color: white;
        border-radius: 5px;
        padding: 4px;
    }
</style>
<div class="card card-dark col-lg-12" style="margin-top:-40px;">
    <div class="card-header">
        Özellik Ekle
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Ekle", "Ozellik", FormMethod.Post))
        {
            <div class="form-row">
                <div class="col-lg-4"></div>
                <div class="form-group col-lg-4">
                    <label for="inputEmail4">Özellik Adı:</label>
                    @Html.TextBoxFor(x => x.ad, new { @class = "form-control arkaplan" })
                    @Html.ValidationMessageFor(x => x.ad)
                </div>
            </div>
            <div class="form-row">
                <div class="col-lg-4"></div>
                <div class="form-group col-lg-4">
                    <label for="inputEmail4">Kategori Adı:</label>
                    @Html.DropDownList("kategoriID", (SelectList)ViewBag.Kategori, new {@class = "form-control" })
                </div>
            </div>
            <div class="form-row" style="margin-top:20px;   ">
                <div class="col-lg-4"></div>
                <button type="submit" class="btn col-lg-4" style="background:black; color:white;">KAYDET</button>
            </div>
            <div class="form-row" style="margin-top:10px;">
                <div class="col-lg-4"></div>
                <div class="form-group col-lg-4">
                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Hata
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
