@model Iletisim
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_AnaSablon.cshtml";
}
<style>
    .arkaplan {
        background-color: #f6f6f6;
    }

    .field-validation-error {
        background-color: #f37878;
        color: white;
        border-radius: 5px;
        padding: 4px;
    }

    .textareaboyut {
        height: 100px;
    }

    .renk {
        background-color: #f37878;
        color: white;
    }
</style>
<!----sub-below-address   col-lg-12 col-md-6 address-w3l-right text-center-->

<div class="py-lg-4 py-md-3 py-sm-3 py-3">
    <br />
    @if (ViewBag.Mesaj != null)
    {
        <div class="alert alert-danger text-center renk">
            @ViewBag.Mesaj
        </div>
    }
    <div style="text-align:center;">
        <h3 class="typo-main-heading mb-lg-4 mb-3 pr-3 pb-1">BİZE ULAŞIN</h3>
    </div>
    @using (Html.BeginForm("Index", "Iletisim", FormMethod.Post))
    {
        <div class="form-row ">
            <div class="form-group col-md-4"></div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Ad:</label>
                @Html.TextBoxFor(x => x.ad, new { @class = "form-control arkaplan" })
                @Html.ValidationMessageFor(x => x.ad)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4"></div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Email:</label>
                @Html.TextBoxFor(x => x.eposta, new { @class = "form-control arkaplan" })
                @Html.ValidationMessageFor(x => x.eposta)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4"></div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Konu:</label>
                @Html.TextBoxFor(x => x.konu, new { @class = "form-control arkaplan" })
                @Html.ValidationMessageFor(x => x.konu)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4"></div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Mesaj:</label>
                @Html.TextAreaFor(x => x.icerik, new { @class = "form-control arkaplan textareaboyut", })
                @Html.ValidationMessageFor(x => x.icerik)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4"></div>
            <div class="form-group col-md-4">
                <button type="submit" class="btn btn-block sent-butnn">GÖNDER</button>
            </div>
        </div>
    }
</div>

